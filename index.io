<!DOCTYPE html>
<html>
<head>
	<title>Stop watch</title>
</head>
<body>
	<div class="wrapper">
		<h2>STOP WATCH</h2>
		<p><span id="min">00</span>:<span id="secs">00</span>:<span id="tenss">00</span></p>
		<div class="button">
			<button id="stop">STOP</button>
			<button id="start">START</button>
			<button id="reset">RESET</button>
		</div>
	</div>
	<style type="text/css">
		*{
			margin: 0;
			padding: 0;
		}
		body{
			font-family: monospace, sans-serif;
			background-image: linear-gradient(90deg, #54d5e2, rgb(42, 234, 199));
			margin: 0 15px;
		}
		.wrapper{
			width: 100%;
		    text-align: center;
		    padding: 20px 0;
		    color: #fff;
		    display: flex;
		    flex-direction: column;
		    align-items: center;
		}
		h2{
			font-weight: 100;
		    font-size: 3rem;
		    text-transform: uppercase;
		}
		p{
			font-size: 2.8rem;
		    margin: 2rem 0;
		    font-weight: 600;
		}
		.button{
			display: flex;
		    flex-wrap: wrap;
		    align-items: center;
		}
		.button > button{
			padding: 20px 50px;
		    background-color: transparent;
		    border: 2px solid #fff;
		    border-radius: 10px;
		    color: #fff;
		    font-weight: 600;
		    font-size: 1rem;
		    margin: 0 20px;
		    cursor: pointer;
		    box-shadow: 0px 0px 5px 0px;
		    transition: .6s ease-in-out;
		}
		.button > button:hover{
			background-color: #fff;
		    border: 2px solid #fff;
		    color: #54d5e2;
		}
		.button > button:focus{
			outline: none;
		}
	</style>
	<script type="text/javascript">
		//window.onload = function () {
		let min = document.getElementById('min')
		let secs = document.getElementById('secs')
		let tenss = document.getElementById('tenss')
		let stop = document.getElementById('stop')
		let start = document.getElementById('start')
		let reset = document.getElementById('reset')
		let Interval
		let Min = 0
		let Seconds = 0
		let Tens = 0
		stop.addEventListener('click', () => clearInterval(Interval))
		start.addEventListener('click', () => {
			clearInterval(Interval);
			Interval = setInterval(startTimer,10);
		})
		reset.addEventListener('click', () => {
			clearInterval(Interval);
			Min = 0
			Seconds = 0
			Tens = 0
			secs.innerHTML = "00"
			tenss.innerHTML = '00'
			min.innerHTML = "00"
		})
		let startTimer = () => {
			Tens++;
			if (Tens < 10) {
				tenss.innerHTML = `0${Tens}`
			}else {
				tenss.innerHTML = `${Tens}`
			}
			if (Tens > 99) {
				Seconds++
				console.log('Seconds')
				if (Seconds < 10) {
					secs.innerHTML = `0${Seconds}`
				}else{
					secs.innerHTML = `${Seconds}`
				}
				Tens = 0;
				tenss.innerHTML = `00`
			}
			if (Seconds > 59) {
				Min++;
				if (Min < 10) {
					min.innerHTML = `0${Min}`
				} else {
					secs.innerHTML = `${Min}`
				}
				Seconds = 0;
				secs.innerHTML = `00`
			}
		}
	</script>
</body>
</html>
